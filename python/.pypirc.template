[distutils]
index-servers =
    pypi
    testpypi

[pypi]
username = __token__
password = ${PYPI_API_TOKEN}  # Will be replaced by environment variable

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = ${TEST_PYPI_API_TOKEN}  # Will be replaced by environment variable
